TELEGRAM_BOT_TOKEN=your_bot_token_here
# comma separated admin ids (integers)
ADMIN_IDS=123456789,987654321
SUPER_ADMIN_ID=123456789

# Environment: dev or prod (default: prod)
BOT_ENV=prod

# Log level: DEBUG, INFO, WARNING, ERROR (default: WARNING in prod, DEBUG in dev)
LOG_LEVEL=WARNING

# Database
DB_PATH=db.sqlite

# Cache settings
CACHE_DIR=cache
BACKUP_DIR=backups
PROFILE_CACHE_TTL=300

# Rate limiting
RATE_LIMIT_PER_SECOND=10
MAX_RETRIES_TELEGRAM=3
RETRY_BACKOFF_FACTOR=2